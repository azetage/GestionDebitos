extends ../layout/plantilla  


block contenido

    br
    br
    h2.py-2.text-center.text-2xl.font-bold.text-white.bg-sky-500(class= "shadow-lg shadow-blue-500/50")= pagina
    if errores 
        div(class="max-w-md mx-auto my-10")
            each error in errores
                p(class= "bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
    
    div(name= 'subir archivo')
        div.mt-8.mx-auto.max-w-full.px-6.text-sm.items-center

            .bg-white.py-8.px-10(class="shadow-lg shadow-gray-500/50")
                
                form.space-y-5(action="/upload" method= "POST" enctype="multipart/form-data")
                    fieldset.px-10.py-1 
                        legend.px-3.py-3.mt-2.font-bold Subir un Archivo 
                        div(class="grid gap-6 mb-3 md:grid-cols-3")
                            div(class= "inline-flex flex flex-row")   
                                label.py-2.px-2.block.h-3.uppercase.text-gray-500.mb-2.font-bold(for="dni_tit") 
                                input#dni_tit.w-full.italic.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(class="placeholder:italic placeholder:text-sm" 
                                placeholder="Seleccionar un Archivo" 
                                type="file" 
                                name="archivo" 
                                )
                            
                            div
                                input(  class= "shadow-lg shadow-blue-500/50 w-full text-white font-semibold py-3 shadow-md cursor-pointer rounded-sm bg-sky-500 hover:bg-sky-700 focus:outline-2 focus:outline-offset-2 focus:outline-sky-500 active:bg-sky-700" 
                                        type= 'submit' value= 'Subir')
 


    hr    
    div(name= 'debitos')            
        h2.px-10.py-2.text-2xl.font-bold DEBITOS                
        div.mt-8.mx-auto.max-w-full.px-6.items-center
            .bg-white.py-8.px-10(class="shadow-lg shadow-gray-500/50")
                .space-y-5
                    fieldset.px-10.py-1 
                        legend.px-3.py-3.mt-2.font-bold DEBITOS BSE 
                        table.text-sm.border-collapse.border.border-slate-900.table-fixed(class="table-auto w-full table-fixed shadow-lg shadow-gray-500/50 ")
                            thead.bg-gray-200.text-gray-500
                                tr
                                    th.border.border-slate-300.px-4 FECHA VTO 
                                    th.border.border-slate-300.px-4 CBU
                                    th.border.border-slate-300.px-4 CBU 2 
                                    th.border.border-slate-300.px-3 NRO AGENTE
                                    th.border.border-slate-300.px-4 MONTO
                                    th.border.border-slate-300.px-4 CODIGO
                                    

                        
                                    
                            tbody
                                
                                each item in datos? datos:''    

                                        
                                    tr
                                        td.italic.border.border-slate-300.px-4= item.fec_vto
                                        td.italic.border.border-slate-300.px-4= item.cbu
                                        td.italic.border.border-slate-300.px-4= item.cbu2
                                        td.italic.border.border-slate-300.px-4= item.nro_agente
                                        td.italic.border.border-slate-300.px-4= item.monto 
                                        td.italic.border.border-slate-300.px-4= item.codigo